<h1><%= time_format(@battle) %></h1>
<div class="row">
  <div class="col-md-8">
    <table class="table">
      <tr>
        <th> 自分のレート </th>
        <th> 相手のレート </th>
        <th> 勝敗 </th>
      </tr>
      <tr>
        <td> <%= @battle.my_rate %> </td>
        <td> <%= @battle.opp_rate %> </td>
        <td> <%= @battle.result_ja %> </td>
      </tr>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h3>自分のポケモン</h3>
    <table class="table">
      <tr>
        <th>ポケモン</th>
        <th>コメント</th>
      </tr>
      <% @battle.my_pokes.each_with_index do |m, i| %>
        <tr>
          <td> <%= image_tag(PokeData.imgpath_from_name(m.name)) %> @ <%= m.item %> </td>
          <td> <%= comment(@battle, m) %> </td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="col-md-6">
    <h3>相手のポケモン</h3>
    <table class="table">
      <tr>
        <th>ポケモン</th>
        <th>コメント</th>
      </tr>
      <% @battle.opp_pokes.each_with_index do |o, i| %>
        <tr>
          <td> <%= image_tag(PokeData.imgpath_from_name(o.name)) %> @ <%= o.item %> </td>
          <td> <%= comment(@battle, o) %> </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <h3>評価</h3>
    <table class="table">
      <tr>
        <th>
        </th>
        <% @battle.opp_pokes.each do |o| %>
          <th>
            <%= image_tag PokeData.imgpath_from_name(o.name) %>
          </th>
        <% end %>
      </tr>
      <% @battle.my_pokes.each do |m| %>
        <tr>
          <th>
            <%= image_tag PokeData.imgpath_from_name(m.name) %>
          </th>
          <% @battle.opp_pokes.each do |o| %>
            <td>
              <%= @battle.evals.find_by(my_poke_id: m.id, opp_poke_id: o.id).eval %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>
