<%= form_for @battle, layout: :inline do |f| %>
  <div class="row text_right">
    <%= f.label :my_rate, "自分のレート" %>
    <%= f.text_field :my_rate %>
    <%= f.label :opp_rate, "相手のレート" %>
    <%= f.text_field :opp_rate %>
    <%= f.label :result, "勝敗" %>
    <%= f.text_field :result %>
  </div>

  <h2>選出</h2>
  <div class="row">
    <div class="col-sm-4">
      <h3>自分のポケモン</h3>
    </div>
    <div class="col-sm-8">
      <h3>相手のポケモン</h3>
      <%= f.fields_for :opp_pokes do |o| %>
        <h4><%= o.index %>匹目</h4>
        <%= o.label :name, "名前" %>
        <%= o.text_field :name %><br>
        <%= o.label :item, "持ち物" %>
        <%= o.text_field :item %><br>
        <%= o.label :ability, "特性" %>
        <%= o.text_field :ability %><br>
      <% end %>
    </div>
  </div>

<% end %>
