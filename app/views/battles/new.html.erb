<h2>基本情報</h2>
<%= form_for @battle do |f| %>
  <div class="row">
    <div class="col-xs-12 form-inline">
      <%= render 'fund_form', f: f %>
    </div>
  </div>

  <h2>選出</h2>
  <div class="row">
    <div class="col-xs-4">
      <h3>自分のポケモン</h3>
      <%= f.fields_for :battle_my_pokes do |ff| %>
        <%= render 'my_poke_form', ff: ff %>
      <% end %>
    </div>
    <div class="col-xs-8 form-inline">
      <h3>相手のポケモン</h3>
      <div class="row">
        <%= f.fields_for :opp_pokes do |ff| %>
          <%= render 'opp_poke_form', ff: ff %>
        <% end %>
      </div>
    </div>
    <div class="col-xs-12">
      <%= f.submit "評価に進む", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
