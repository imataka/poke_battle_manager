<h1>評価を入力する！</h1>
<div class="row">
  <%= form_for @battle do |b| %>
    <div class="col-xs-12">
      <table class="table table-hover">
        <tr>
          <th>
          </th>
          <% @battle.opp_pokes.each do |o| %>
            <th>
              <%= o.name %>
            </th>
          <% end %>
          <% @battle.my_pokes.each do |m| %>
            <tr>
              <th>
                <%= m.name %>
              </th>
              <% @battle.opp_pokes.each do |o| %>
                <td>
                  <%= b.fields_for :evals do |e| %>
                    <%= e.hidden_field :my_poke_id, :value => m.id %>
                    <%= e.hidden_field :opp_poke_id, :value => o.id %>
                    <%= e.select :eval, options_for_select(@choices, selected: 0), {}, class: "form-control" %>
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
      </table>
    </div>
    <div class="col-xs-12">
      <%= b.submit "評価を確定する", class: "btn btn-default" %>
    </div>
  <% end %>
</div>
