<div class="row">
  <div class="col-xs-12">
    <table class="table">
      <tr>
        <th></th>
        <% @my_pokes.each do |my_poke| %>
          <th class="centered"><%= image_tag(PokeData.imgpath_from_name(my_poke.name)) %><br>
            <%= my_poke.battles.count %>回，<%= my_poke.average(3) %>
          </th>
        <% end %>
      </tr>
      <% @opp_names.each do |opp_name| %>
        <tr>
          <th class="centered"><%= image_tag(PokeData.imgpath_from_name(opp_name[0])) %><br>
            <%= opp_name[1] %>回，<%= Eval.average_for_poke(@my_pokes.map(&:id), OppPoke.ids_by_name(opp_name), 3) %>
          </th>
          <% @my_pokes.each do |my_poke| %>
            <td class="centered"><%= Eval.average_for_poke(my_poke.id, OppPoke.ids_by_name(opp_name), 3) %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>
